<h1>Contacts</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
      <th>Message</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |contact|}}
    <tr>
      <th><span class="id">{{contact.id}}</span></th>
      <th><span class="email">{{contact.email}}</span></th>
      <th><span class="message">{{contact.message}}</span></th>
      <th><button  class="btn btn-danger btn-xs" {{action 'deleteContact' contact}}>Delete</button></th>
    </tr>
  {{/each}}
  </tbody>
</table>