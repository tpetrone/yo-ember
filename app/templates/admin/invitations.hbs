<h1>Invitations</h1>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>E-mail</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	{{#each model as |invitation|}}
		<tr>
			<th>{{invitation.id}}</th>
			<th><span class="email">{{invitation.email}}</span></th>
			<th><th><button  class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button></th></th>
		</tr>
	{{/each}}
	</tbody>
</table>