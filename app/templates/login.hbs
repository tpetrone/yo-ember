<form {{action 'authenticate' email password on='submit'}}>
  <label for="email">Email</label>
  {{input id='email' placeholder='Enter Login' value=email}}
  <label for="password">Password</label>
  {{input id='password' placeholder='Enter Password' type='password' value=password}}
  <button id='btnLogin' type="submit">Login
</button>
  {{#if errorMessage}}
  <p>{{errorMessage}}</p>
  {{/if}}
</form>